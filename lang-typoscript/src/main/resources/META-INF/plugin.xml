<idea-plugin>
    <id>com.cedricziel.idea.typoscript</id>
    <name>TypoScript FOSS Support</name>
    <vendor email="cedric@cedric-ziel.com" url="https://github.com/cedricziel/idea-php-typo3-plugin">Cedric Ziel</vendor>

    <description><![CDATA[
<h1>TypoScript FOSS Support</h1>

<p>This text is replaced with the contents of resources/META-INF/description.html</p>
    ]]></description>

    <change-notes><![CDATA[
<p>This text is replaced with the contents of resources/META-INF/change-notes.html</p>
    ]]>
    </change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="TypoScript" implementationClass="com.cedricziel.idea.typoscript.lang.TypoScriptFileType" fieldName="INSTANCE" language="TypoScript" extensions="typoscript"/>
        <lang.parserDefinition language="TypoScript" implementationClass="com.cedricziel.idea.typoscript.lang.parser.TypoScriptParserDefinition"/>
        <lang.syntaxHighlighterFactory language="TypoScript" implementationClass="com.cedricziel.idea.typoscript.lang.TypoScriptSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.cedricziel.idea.typoscript.lang.TypoScriptColorSettingsPage"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
